<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/background_dark"
    tools:context=".MainActivity">

    <!-- A 리스트 섹션 (왼쪽) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.05"
            android:text="A 리스트"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddItem"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Add"
            android:textColor="@color/text_control_button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_add_background"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:paddingHorizontal="24dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewA"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_list_background"
            android:padding="8dp"
            android:clipToPadding="false"
            android:elevation="4dp" />

    </LinearLayout>

    <!-- B 리스트 섹션 (오른쪽) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.05"
            android:text="B 리스트"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRemoveItem"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Remove"
            android:textColor="@color/text_control_button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_delete_background"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:paddingHorizontal="24dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewB"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_list_background"
            android:padding="8dp"
            android:clipToPadding="false"
            android:elevation="4dp" />

    </LinearLayout>

</LinearLayout>